@model LoginViewModel

@using Columbo.IdentityProvider.Sts.ViewModels

<div class="row">
    <div class="col-md-2 mx-auto test" style="margin-top:5%">

        <div class="col-md-12 text-center mb-5">
            <h1>Columbo</h1>
        </div>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {

        @Html.HiddenFor(x => x.ReturnUrl)

        <div class="form-group mb-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                </div>
                @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Wprowadź login" } })
            </div>

        </div>
        <div class="form-group mb-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = "Wprowadź hasło" } })
            </div>
        </div>

        <div class="col-md-12 text-center ">
            <button type="submit" class="btn btn-block btn-primary tx-tfm">Zaloguj się</button>
        </div>

        }

    </div>
</div>